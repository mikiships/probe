{
  "name": "@mordecai1010/agent-probe",
  "version": "0.1.0",
  "description": "Red-team your AI agent before your users do",
  "type": "module",
  "bin": {
    "probe": "dist/cli.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "tsx --test tests/yaml-loader.test.ts",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "ai",
    "agent",
    "security",
    "testing",
    "red-team",
    "prompt-injection"
  ],
  "author": "mikiships",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikiships/probe.git"
  },
  "homepage": "https://github.com/mikiships/probe#readme",
  "bugs": {
    "url": "https://github.com/mikiships/probe/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "scenarios/"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.56.0"
  }
}
